<body>
  <h2>Editing Book</h2>
  
  
    <% if @book.errors.any? %>
    <p class="error-message"><%= @book.errors.count %>error prohibited this book from being saved:</p>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
  
  
  <%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <div class="label-title">
    <%= f.text_field :title %>
  </div>
  
  <h5>Body</h5>
  <div class="label-body">
    <%= f.text_area :body %>
  </div>
  
  <div class="form-buttom">
    <%= f.submit 'Update Book' %>
  </div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", '/books' %>
  <% end %>
</body>