<body>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <div class="label-title">
    <%= f.text_field :title %>
  </div>
  
  <h5>Body</h5>
  <div class="label-body">
    <%= f.text_area :body %>
  </div>
  
  <div class=>
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
</body>