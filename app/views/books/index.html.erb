<body>
    <div class="flash-message">
        <%= flash[:notice] %>
    </div>
    <h1>Books</h1>
        <table>
            <tr>
                <th class="th-1">Title</th>
                <th class="th-2">Body</th>
                <th colspan="3"></th>
            </tr>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
            </tr>
            <% end %>
        </table>
        
    <h2>New Book</h2>
    
    
    <% if @book.errors.any? %>
    <p class="error-message"><%= @book.errors.count %>error prohibited this book from being saved:</p>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
    
    
        <%= form_with model: @book do |f| %>
        
        <h5>Title</h5>
        <div class="label-title">
        <%= f.text_field :title %>
        </div>
  
        <h5>Body</h5>
        <div class="label-body">
        <%= f.text_area :body %>
        </div>
  
        <div class="form-buttom">
        <%= f.submit 'Create Book' %>
       </div>
       <% end %>
</body>